{
  "name": "autograph",
  "description": "A C++ implementation of the Autograph protocol",
  "version": "0.2.0",
  "authors": [
    {
      "name": "Christoffer Carlsson",
      "email": "cc@christofferc.com",
      "url": "https://christofferc.com"
    }
  ],
  "build": {
    "includeDir": "cplusplus/include",
    "flags": [
      "-D CONFIGURED",
      "-D DEV_MODE=0",
      "-I c/libsodium/src/libsodium/include",
      "-I c/libsodium/src/libsodium/include/sodium"
    ],
    "srcDir": ".",
    "srcFilter": "-<*> +<c/src> +<cplusplus/src +<c/libsodium/src/libsodium> -<c/libsodium/src/libsodium/include>"
  },
  "frameworks": "*",
  "keywords": [
    "security",
    "identity",
    "cryptography",
    "privacy",
    "authentication",
    "freedom",
    "verification",
    "ed25519",
    "hkdf",
    "x25519",
    "chacha20-poly1305",
    "elliptic-curves",
    "ownership",
    "decentralization",
    "diffie-hellman"
  ],
  "license": "Unlicense",
  "platforms": "*",
  "repository": {
    "type": "git",
    "url": "https://github.com/christoffercarlsson/autograph.git"
  },
  "scripts": {
    "postinstall": "scripts/sodium-version.sh"
  }
}
